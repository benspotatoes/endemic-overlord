.entry_header
  - if @display_entry
    .entry_title
      = @display_entry.disp_title
    \::
  .entry_actions
    - if @display_entry
      = link_to 'New', all_entries_path(session[:entry_tag]), class: 'action'
      \::
      - if !@display_entry.archived?
        = link_to 'Edit', edit_entry_path(@display_entry.public_id), class: 'action'
        \::
      - @archive_action = @display_entry.archived? ? 'Unarchive' : 'Archive'
      = link_to @archive_action, archive_entry_path(@display_entry.public_id), class: 'action'